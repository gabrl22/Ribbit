<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent">


    <RelativeLayout
                    android:layout_marginTop="@dimen/inbox_vertical_margin"
                    android:layout_marginLeft="@dimen/inbox_horizontal_margin"
                    android:layout_marginRight="@dimen/inbox_horizontal_margin"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp">

        <ImageView
            android:id="@+id/message_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            android:src="@drawable/ic_picture"
            android:contentDescription="@string/cds_message_icon"
            />

        <TextView
            android:id="@+id/sender_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:layout_alignParentLeft="true"
            android:text="Gabriel"
            android:textSize="16dp"
            />
        <TextView
            android:id="@+id/time_label"
            android:text="4 minutes agos"
            android:layout_alignParentLeft="true"
            android:textSize="12sp"
            android:paddingBottom="4dp"
            android:textColor="@color/light_grey"
            android:layout_below="@id/sender_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </RelativeLayout>
</LinearLayout>